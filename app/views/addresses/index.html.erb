<h1>Listing addresses</h1>

<table>
  <tr>
    <th>Street line 1</th>
    <th>Stree line 2</th>
    <th>City</th>
    <th>State</th>
    <th>Zip</th>
    <th>Lat</th>
    <th>Long</th>
  </tr>

<% @addresses.each do |address| %>
  <tr>
    <td><%=h address.street_line_1 %></td>
    <td><%=h address.stree_line_2 %></td>
    <td><%=h address.city %></td>
    <td><%=h address.state %></td>
    <td><%=h address.zip %></td>
    <td><%=h address.lat %></td>
    <td><%=h address.long %></td>
    <td><%= link_to 'Show', address %></td>
    <td><%= link_to 'Edit', edit_address_path(address) %></td>
    <td><%= link_to 'Destroy', address, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New address', new_address_path %>