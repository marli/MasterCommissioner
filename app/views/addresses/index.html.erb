<div id="map_canvas" style="width:100%; height:100%"></div>

<%= link_to('Previous Page', :county => @county, :page => @page-1) if @page > 0 %>
<%= link_to('Next Page', :county => @county, :page => @page+1) if @page < @page_limit %>

<h1>Listing addresses</h1>

<table>
  <tr>
    <th>Street line 1</th>
    <th>Stree line 2</th>
    <th>City</th>
    <th>State</th>
    <th>Zip</th>
    <th>Appraised Value</th>
    <th>Amount Due</th>
    <th>Plaintiff</th>
    <th>Defendant</th>
    <th>Sale Date</th>
  </tr>

<% @addresses.each do |address| %>
  <tr>
    <td><%=h address.street_line_1 %></td>
    <td><%=h address.stree_line_2 %></td>
    <td><%=h address.city %></td>
    <td><%=h address.state %></td>
    <td><%=h address.zip %></td>
    <td><%=h address.appraised_value %></td>
    <td><%=h address.amount_due %></td>
    <td><%=h address.plaintiff %></td>
    <td><%=h address.defendant %></td>
    <td><%=h address.sale_date %></td>
    <td><%= link_to 'Show', address %></td>
    <td><%= link_to 'Edit', edit_address_path(address) %></td>
    <td><%= link_to 'Destroy', address, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New address', new_address_path %>
